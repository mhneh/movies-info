<div class="container">
    <div class="row d-flex justify-content-center">
        <h1 class="text-center mb-2">Favorites List</h1>
        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Img</th>
                <th scope="col">Title</th>
                <th scope="col">Year</th>
                <th scope="col">Top Rank</th>
                <th scope="col">Rating</th>
                <th scope="col">Genres</th>
                <th scope="col">#</th>
            </tr>
            </thead>
            <tbody>
            {{#each movies}}
                <tr>

                    <th scope="row">{{@index}}</th>
                    <td>
                        <a href="/movies/detail/{{this.id}}">
                        <img src={{this.img}} class="img-thumbnail" alt="..." width="100">
                        </a>
                    </td>
                    <td>
                        <a href="/movies/detail/{{this.id}}">
                        {{this.title}}
                        </a>
                    </td>
                    <td>{{this.year}}</td>
                    <td>{{this.topRank}}</td>
                    <td>{{this.rating}}</td>
                    <td>{{this.genres}}</td>
                    <td>
                        <a href='/movies/favorites/remove/{{this.id}}' class="btn btn-danger">Remove</a>
                    </td>
                </tr>

            {{/each}}
            </tbody>
        </table>
    </div>
</div>